<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/container"
    tools:context=".fragment.SearchFragment">

    <View
        android:id="@+id/searchCircle1"
        android:background="@drawable/search_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="-75dp"
        app:layout_constraintStart_toStartOf="@id/searchBarRectangle1"
        app:layout_constraintEnd_toStartOf="@id/searchBarRectangle1"
        app:layout_constraintTop_toTopOf="@id/searchBarRectangle1"
        app:layout_constraintBottom_toBottomOf="@id/searchBarRectangle1"/>

    <View
        android:id="@+id/searchCircle2"
        android:background="@drawable/search_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="-75dp"
        app:layout_constraintStart_toEndOf="@id/searchBarRectangle1"
        app:layout_constraintEnd_toEndOf="@id/searchBarRectangle1"
        app:layout_constraintTop_toTopOf="@id/searchBarRectangle1"
        app:layout_constraintBottom_toBottomOf="@id/searchBarRectangle1"/>

    <View
        android:id="@+id/searchBarRectangle1"
        android:background="@drawable/search_rectangle"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/searchBarRectangle2"
        android:background="#ffffff"
        android:layout_width="300dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="@id/searchBarRectangle1"
        app:layout_constraintEnd_toEndOf="@id/searchBarRectangle1"
        app:layout_constraintTop_toTopOf="@id/searchBarRectangle1"
        app:layout_constraintBottom_toBottomOf="@id/searchBarRectangle1"/>

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:autofillHints=""
        android:background="@null"
        android:hint="@string/search_bar_hint"
        android:imeOptions="actionGo"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="@id/searchCircle1"
        app:layout_constraintStart_toStartOf="@id/searchCircle1"
        app:layout_constraintTop_toTopOf="@id/searchCircle1"
        tools:ignore="RtlSymmetry,TouchTargetSizeCheck"/>

    <Button
        android:id="@+id/searchIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/search_bar_icon"
        android:contentDescription="@string/search_bar"
        app:layout_constraintBottom_toBottomOf="@id/searchCircle2"
        app:layout_constraintEnd_toEndOf="@id/searchCircle2"
        app:layout_constraintStart_toStartOf="@id/searchCircle2"
        app:layout_constraintTop_toTopOf="@id/searchCircle2"
        tools:ignore="TouchTargetSizeCheck"/>

</androidx.constraintlayout.widget.ConstraintLayout>
