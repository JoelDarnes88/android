<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <View
        android:id="@+id/border1"
        android:background="#20cce4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/border2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edit_profile_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/circle1"
        android:background="@drawable/circle_shape"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="-75dp"
        app:layout_constraintEnd_toEndOf="@id/rectangle1"
        app:layout_constraintTop_toTopOf="@id/rectangle1"
        app:layout_constraintBottom_toBottomOf="@id/rectangle1"/>

    <View
        android:id="@+id/rectangle1"
        android:background="#d0f4fc"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/circle2"
        android:background="@drawable/circle_shape"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-75dp"
        app:layout_constraintStart_toStartOf="@id/rectangle1"
        app:layout_constraintTop_toTopOf="@id/rectangle1"
        app:layout_constraintBottom_toBottomOf="@id/rectangle1"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:src="@drawable/default_pfp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-75dp"
        app:civ_border_color="#20cce4"
        app:civ_border_width="5dp"
        app:layout_constraintStart_toStartOf="@id/rectangle1"
        app:layout_constraintBottom_toBottomOf="@id/rectangle1"
        app:layout_constraintTop_toTopOf="@id/rectangle1"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/default_name"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/rectangle1"
        app:layout_constraintEnd_toEndOf="@id/rectangle1"
        app:layout_constraintTop_toTopOf="@id/rectangle1"
        tools:ignore="TextSizeCheck,VisualLintOverlap"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/default_username"
        android:textColor="#666666"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintEnd_toEndOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/averageGlobalRatingStar"
        app:srcCompat="@drawable/black_star"
        android:contentDescription="@string/average_global_rating"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="@id/rectangle1"
        app:layout_constraintEnd_toEndOf="@id/rectangle1"
        app:layout_constraintBottom_toBottomOf="@id/rectangle1"/>

    <TextView
        android:id="@+id/averageGlobalRating"
        android:text="@string/default_rating"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@id/averageGlobalRatingStar"
        app:layout_constraintTop_toTopOf="@id/averageGlobalRatingStar"
        app:layout_constraintBottom_toBottomOf="@id/averageGlobalRatingStar"/>

    <TextView
        android:id="@+id/globalAmountRatings"
        android:text="@string/default_amount_ratings"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/averageGlobalRatingStar"
        app:layout_constraintEnd_toEndOf="@id/averageGlobalRating"
        app:layout_constraintTop_toBottomOf="@id/averageGlobalRatingStar"/>

    <ImageView
        android:id="@+id/locationIcon"
        app:srcCompat="@drawable/location"
        android:contentDescription="@string/location"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="@id/averageGlobalRatingStar"
        app:layout_constraintTop_toTopOf="@id/averageGlobalRatingStar"
        app:layout_constraintBottom_toBottomOf="@id/globalAmountRatings"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/default_country"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/locationIcon"
        app:layout_constraintStart_toStartOf="@id/locationIcon"
        app:layout_constraintTop_toTopOf="@id/locationIcon"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/aboutMeTitle"
        android:text="@string/about_me"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profilePicture"/>

    <View
        android:id="@+id/aboutMeLine"
        android:background="#666666"
        android:layout_width="325dp"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/aboutMeTitle" />

    <TextView
        android:id="@+id/aboutMeDescription"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/default_about_me_description"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/aboutMeLine"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/myServicesTitle"
        android:text="@string/my_services"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/aboutMeTitle"
        app:layout_constraintTop_toBottomOf="@id/aboutMeDescription"/>

    <View
        android:id="@+id/myServicesLine"
        android:background="#666666"
        android:layout_width="325dp"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/myServicesTitle"/>

    <View
        android:id="@+id/Service1"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="325dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/myServicesLine"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Service1_Logo"
        android:src="@drawable/painting"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:civ_border_color="#20cce4"
        app:civ_border_width="3dp"
        app:layout_constraintStart_toStartOf="@id/Service1"
        app:layout_constraintTop_toTopOf="@id/Service1"
        tools:ignore="ImageContrastCheck"/>

    <TextView
        android:id="@+id/Service1_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder1"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/Service1_Logo"
        app:layout_constraintEnd_toEndOf="@id/Service1"
        app:layout_constraintTop_toTopOf="@id/Service1"
        tools:ignore="TextSizeCheck" />

    <View
        android:id="@+id/Service1_Line"
        android:background="#aaaaaa"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/Service1_Title"
        app:layout_constraintEnd_toEndOf="@id/Service1_Title"
        app:layout_constraintTop_toTopOf="@id/Service1_Title"/>

    <TextView
        android:id="@+id/Service1_Description"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:text="@string/placeholder2"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/Service1_Line"
        app:layout_constraintStart_toStartOf="@id/Service1_Line"
        app:layout_constraintTop_toTopOf="@id/Service1_Line"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/Service1_averageRatingStar"
        app:srcCompat="@drawable/black_star"
        android:contentDescription="@string/placeholder3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="-25dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="@id/Service1_Logo"
        app:layout_constraintEnd_toEndOf="@id/Service1_Logo"
        app:layout_constraintBottom_toBottomOf="@id/Service1"/>

    <TextView
        android:id="@+id/Service1_averageRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/default_rating"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/Service1_averageRatingStar"
        app:layout_constraintTop_toTopOf="@id/Service1_averageRatingStar"
        app:layout_constraintBottom_toBottomOf="@id/Service1_averageRatingStar"/>

    <TextView
        android:id="@+id/Service1_amountRatings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_amount_ratings"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/Service1_averageRatingStar"
        app:layout_constraintEnd_toEndOf="@id/Service1_averageRating"
        app:layout_constraintTop_toBottomOf="@id/Service1_averageRatingStar"/>

</androidx.constraintlayout.widget.ConstraintLayout>
